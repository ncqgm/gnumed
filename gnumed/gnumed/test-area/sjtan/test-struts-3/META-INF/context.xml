    <parameter>
      <name>password</name>
      <!-- <value>monica</value> -->
      <value>test-doc</value>
    </parameter>
    <parameter>
      <name>maxActive</name>
      <value>20</value>
    </parameter>
    <parameter>
      <name>maxIdle</name>
      <value>10</value>
    </parameter>
    <parameter>
      <name>maxWait</name>
      <value>-1</value>
      <!-- negative maxWait means requestors block indefinitely on empty pool, until connection
		returned to pool -->
    </parameter>
    <parameter>
      <name>removeAbandoned</name>
      <value>true</value>
    </parameter>
    <parameter>
      <name>removeAbandonedTimeout</name>
      <value>5</value>
      <!-- too long a timeout , and things may freeze -->
    </parameter>
    <parameter>
      <name>logAbandoned</name>
      <value>true</value>
    </parameter>
  </ResourceParams>
   
